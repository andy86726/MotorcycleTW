@model IEnumerable<MotorcycleTW.Models.Order_Detail>

@{
    ViewBag.Title = "Index";
    //var jsonLocations = Json.Encode(Model);
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products.p_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.p_unitprice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Orders.o_date)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Products.p_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.p_unitprice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orders.o_date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.p_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.p_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.p_id })
            </td>
        </tr>
    }

</table>
<div class="container">
    <div class="jumbotron alert-success">
        <canvas id="lineChart"></canvas>
    </div>
</div>


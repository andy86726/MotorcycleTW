@using MotorcycleTW.Models
@model LoginViewModel
@{
    ViewBag.Title = "登入";
}
@section topCSS{
    <style>
        body {
            background: #ECF0F1;
        }

        .center {
            width: 500px;
            margin: 0;
            margin: auto;
            margin-top: 40px;
        }

            .center h2 {
                margin: auto;
                font-size: 44px;
                font-weight: lighter;
            }

            .center .inner {
                margin: auto;
                padding: 50px;
                background: #fff;
                margin-top: 10px;
                font-size: 18px;
            }

                .center .inner a {
                    color: #000;
                    font-size: 20px;
                    font-weight: bold;
                    display: flex;
                    justify-content: center;
                    width: 236px;
                    padding: 18px 24px;
                    margin: auto;
                    border: 1px solid #f1f3f3;
                    background: #f1f3f3;
                    border-radius: 32px;
                }

                    .center .inner a:hover {
                        color: #fff;
                        border: 1px solid #B9BCBF;
                        background: #B9BCBF;
                    }

        .text-center input {
            font-size: 18px;
            margin-top: 30px;
            width: 90px;
            height: 60px;
            border-radius: 30px;
            font-weight: bold;
        }

            .text-center input:hover {
                background: #00FFCC;
                border: 1px solid #00FFCC;
            }


        .left {
            color: #C1C1C3;
            font-size: 22px;
            padding: 0;
        }

        .right {
            float: right;
            color: #C1C1C3;
            font-size: 22px;
            padding: 0;
        }

        a:hover {
            text-decoration: none;
            color: #444;
        }
    </style>
}
<div class="center">
    <h2 class="text-center">@ViewBag.Title</h2>
    <div class="inner">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="text-center">
                    <a href="#" class="btn btn-solid-light-gray btn-facebook-login">
                        <div class="layout-row">
                            <div class="layout-cell">
                                <img src="//images.gogoroapp.com/my-gogoro/facebook-login-icon.png"
                                     style="margin-right: 10px;" alt="">用 Facebook 登入
                            </div>
                        </div><!-- layout-table -->
                    </a>
                    <p style="margin:20px 0;">或</p>
                </div>
                <div class="input">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    <div class="">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="input">
                    @Html.LabelFor(m => m.Password, new { @class = " control-label" })
                    <div class="">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="text-center">
                    <input type="submit" value="登入" class="btn btn-primary" />
                </div>
            }
        </section>
    </div>
    @*只要您的密碼重設功能能夠進行帳戶確認，就啟用此項*@
    <div>
        @Html.ActionLink("忘記密碼?", "ForgotPassword", "Account", new { @class = "left" })
        @Html.ActionLink("註冊", "Register", "Account", new { @class = "right" })
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

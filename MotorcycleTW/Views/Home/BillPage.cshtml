        </div>
        <div>
            <br>
            <p class="font-weight-bold">購買人帳號:</p>

            <br>

            <i>洪佑昇, 09123456789, zxcv86294@gmail.com, 新竹市香山區五福路707號</i>
        </div>
        <div class="d-flex" style="margin-top:30px;">
            <div class="col-4">
                <p class="font-weight-bold">寄送資料</p>
                <div>
                    <input type="checkbox" name="vehicle" value="check3"> 同登入帳號
                </div>
            </div>
            @using (Html.BeginForm("BillPage", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
        <div class="col-8">
            <p class="font-weight-bold">取貨人姓名*</p>
            <input name="name" type="text" style="width:542px;height:40px;" placeholder="請輸入取貨人姓名">
            <p class="font-weight-bold">取貨人手機號碼*</p>
            <input name="cellphonenumber" type="text" style="width:542px;height:40px;" placeholder="請輸入取貨人手機號碼">
            <p class="font-weight-bold">取貨人電子郵件*</p>
            <input name="email" type="text" style="width:542px;height:40px;" placeholder="請輸入取貨人電子郵件">
            <p class="font-weight-bold">安裝門市*</p>
            <select name="storecity" id="" style="border-radius:10px;height: 40px;width: 100px;margin-right: 10px">
                <option value="0">&nbsp&nbsp&nbsp&nbsp縣/市</option>
                <option value="台北市">台北市</option>
                <option value="新北市">新北市</option>
                <option value="桃園市">桃園市</option>
                <option value="新竹市">新竹市</option>
            </select>
            <select name="storename" id="" style="border-radius:10px;height: 40px;width:170px;">
                <option value="0">請選擇門市</option>
                <option value="光華八德門市">光華八德門市</option>
                <option value="師大和平門市">師大和平門市</option>
                <option value="萬華中華門市">萬華中華門市</option>
                <option value="松山饒河門市">松山饒河門市</option>
                <option value="圓山承德門市">圓山承德門市</option>
                <option value="內湖民權服務中心">內湖民權服務中心</option>
            </select>
            <p class="font-weight-bold">車主姓名*</p>
            <input name="car_name" type="text" style="width:542px;height:40px;" placeholder="請輸入車主姓名">
            <p class="font-weight-bold">車牌號碼*</p>
            <input name="car_number" type="text" style="width:542px;height:40px;" placeholder="範例車牌號碼 ABC-1234">
            <input type="submit" class="btn btn-secondary" style="margin:10px 0" value="註冊">
        </div>
            }
        </div>

        <script>
            $("#hiddenshoplist").click(function () {
                $("#shoplist").toggle(200000);
            });
        </script>

            </tr>
        </thead>
        <tbody>
            @for (var i = 1; i < ShoppingList.Count(); i++) {
                @Html.Partial("BillPagePartialView",i)
            }
            <tr>
                <td scope="col"></td>
                <td scope="col"></td>
                <td scope="col">
                    <ul class="list-unstyled">
                        <li>
                            <h4 class="font-weight-bold">商品金額</h4>
